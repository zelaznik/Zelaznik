<!-- Header Wrapper -->
  <div id="header-wrapper">
    <div class="container">

      <!-- Header -->
      <div id="header">
        <div class="inner">

          <!-- Logo -->
          <h1><%= link_to @current_user.full_name, root_url %></h1>

          <!-- Nav -->
          <nav id="nav">
            <ul>
              <% ['home','about','blog','resume','portfolio','contact'].each do |option| %>
                <li class="<%= (active=='option') ? 'current_page_item' : '' %>">
                  <%= link_to option.capitalize, send("#{option}_path") %>
                </li>
              <% end %>
            </ul>
          </nav>

        </div> <!-- End Inner -->
      </div> <!-- End Header -->

      <% # The banner is passed in as an optional block %>
      <%= yield %>

    </div>
    <div id="header-wrapper-ie8"></div>
  </div>
