<div id="page-wrapper">
	<%= render 'header', active: 'home' %>

	<div class="banner-wrapper">
		<div id="banner">
			<section id="banner-intro">
				<h2 class="section-headline">
					<span class="group">
						<span class="group">Software Engineer,</span>
					</span>
					<span class="group">
						<span class="group">Mathematician,</span>
						<span class="group">Reporter</span>
					</span>
        </h2>

				<div>
					<p class="section-caption">
						<span class="group group-secondary">
							<span class="group">Everything in life has</span>
							<span class="group">been a puzzle to solve.</span>
						</span>
						<span class="group group-secondary">
							<span class="group">Math puzzles as an actuary,</span>
							<span class="group">policy puzzles as a reporter</span>
						</span>
					</p>
				</div>

				<h3 class="section-caption">
					<span class="group">Software is</span>
					<span class="group">just another puzzle.</span>
				</h3>

			</section>
		</div> <!-- End #banner -->
	</div> <!-- .banner-wrapper -->


	<!-- Main Wrapper -->
	<div id="main-wrapper">
		<div id="main" class="container">

				<!-- Intro Wrapper -->
				<div class="wrapper wrapper-style2">
					<div class="container">
						<div class="row">
							<div class="12u">

								<!-- Intro -->
								<section id="skills-intro">
                  <header class="section-header">
                    <h2 class="section-headline">
											<span class="group">Computer<span> / <span class="group">Technical Skills</span>
										</h2>
                    <p class="section-caption">
											<span class="group">
												<span class="group">An affinity for</span>
												<span class="group">scripting languages,</span>
											</span>
											<span class="group">
												<span class="group">SQL databases,</span>&nbsp;<span>and</span>
												<span class="group">unit-testing frameworks.</span>
											</span>
											</p>
                  </header>

									<div class="skills-table">
										<% @current_user.skills.each do |skill| %>
											<div class="skills-item">
										    <%= image_tag skill.image_url, class: 'skills-item-image', alt: skill.name %>
										    <h3 class="section-item-label skills-item-label"><%= skill.name %></h3>
											</div>
										<% end %>
									</div> <!-- end .row -->
								</section> <!-- end #intro -->

							</div> <!-- End .12u -->
						</div>
					</div>
				</div> <!-- end intro wrapper -->


				<div class="wrapper wrapper-style1">
					<div class="container">
						<div class="row">
							<div class="12u">
								<section id="contact-intro">
									<header class="section-header">
										<h2 class="section-headline">Contact Me</h2>
									</header>
								</section>
							</div> <!-- end .12u -->
						</div> <!-- end .row -->
					</div> <!-- end .container -->

					<div class="container">
						<div class="row">

							<div class="6u 12u(mobile)">
								<ul class="contact">
									<li>
										<div class="container">
											<div class="row">
												<div class="6u">
													<span class="icon fa-home"></span>
													<%= @current_user.address.gsub("\n", "<br>").html_safe %>
												</div>
												<div class="6u">
													<div class="6u 12u(mobile)">
													</div>
												</div>
											</div>
										</div>
									</li>
									<li>
										<span class="icon fa-envelope"></span>
										<%= @current_user.email %>
									</li>
									<li>
										<span class="icon fa-phone"></span>
										<%= @current_user.phone %>
									</li>
									<li>
										<span class="icon fa-twitter"></span>
										@<%= @current_user.twitter %>
									</li>
								</ul> <!-- end .contact -->
							</div> <!-- end .columns -->

						</div> <!-- end .row -->
					</div> <!-- end .container -->


				</div> <!-- end .wrapper -->

		</div> <!-- End #main.container -->

		<div class="clear-footer"></div>
	</div> <!-- End #main-wrapper -->

</div> <!-- end #page-wrapper -->

<!-- Footer Wrapper -->
<%= render 'footer' %>
