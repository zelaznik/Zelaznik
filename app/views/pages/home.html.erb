<div id="page-wrapper">
	<%= render 'header', active: 'home' %>

	<div class="banner-wrapper">
		<div id="banner">
			<section>
				<h2><ul class="banner-list">
					<li>Software Engineer</li>
					<li>Lover Of Math</li>
					<li>Sporatic Blogger</li>
				</ul></h2>

				<p>
					<span>When I&#39;m not working, I&#39;m probably running,</span>
					<span>solving Sudokus, putting forth an honest effort at swing dancing,</span>
					<span>or trying to make it big in the local karaoke scene.</span>
				</p>
			</section>
		</div> <!-- End #banner -->
	</div> <!-- .banner-wrapper -->


	<!-- Main Wrapper -->
	<div id="main-wrapper">
		<div id="main" class="container">

				<!-- Intro Wrapper -->
				<div class="wrapper wrapper-style2">
					<div class="container">
						<div class="row">
							<div class="12u">

								<!-- Intro -->
								<section id="intro">
									<div class="row">

										<% @current_user.skills.each do |skill| %>
												<div class="3u">
												  <section>
												    <%= image_tag skill.image_url, alt: skill.name %>
												    <h3><%= skill.name %></h3>
												  </section>
												</div><!-- End .3u -->
										<% end %>

									</div> <!-- end .row -->
								</section> <!-- end #intro -->

							</div> <!-- End .12u -->
						</div>
					</div>
				</div> <!-- end intro wrapper -->


				<!-- Content -->
				<div id="content">

					<div class="row">
						<div class="12u">
							<!-- Preview -->
							<section>
								<header>
									<h2>Projects</h2>
								</header>
							</section>
						</div> <!-- End .12u -->
					</div> <!-- end .row -->

					<% @current_user.projects.limit(4).each do |project| %>
						<%= render 'project', project: project %>
					<% end %>
				</div>

		</div> <!-- End #main.container -->

		<div class="clear-footer"></div>
	</div> <!-- End #main-wrapper -->

</div> <!-- end #page-wrapper -->

<!-- Footer Wrapper -->
<%= render 'footer' %>
